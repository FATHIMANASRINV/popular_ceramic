Options -Indexes
DirectoryIndex public/popular-ceramic/index.php index.php index.html

<IfModule mod_rewrite.c>
RewriteEngine On

# Allowlisted root files only if they actually exist at root
RewriteCond %{REQUEST_URI} ^/(sitemap\.xml|robots\.txt|google[^/]+\.html|create_storage_link\.php|clear_cache\.php|clear_cashe\.php)$ [NC]
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -f
RewriteRule ^ - [L]

# Serve existing files from /public directly
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{DOCUMENT_ROOT}/public/$1 -f
RewriteRule ^(.*)$ public/$1 [L]

# Send all other requests to Laravel front controller in /public
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ public/index.php [L]
</IfModule>

# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php83” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php83 .php .php8 .phtml
</IfModule>
